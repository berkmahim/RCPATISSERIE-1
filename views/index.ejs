	<!-- Product -->
	<section class="bg0 p-t-23 p-b-140">
		<div class="container">
			<div class="p-b-10">
				<h3 class="ltext-103 cl5">
					TÜM ÜRÜNLERİMİZ
				</h3>
			</div>

			<div class="flex-w flex-sb-m p-b-52">
				<div class="flex-w flex-l-m filter-tope-group m-tb-10">
					<button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
						Tüm Ürünler
					</button>

					<button  class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".buyuk">
						Büyük Boy Pastalar
					</button>

					<button  class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".kucuk">
						Küçük Boy Pastalar
					</button>

					<button  class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".ozel">
						Özel Tasarım Pastalar
					</button>

					<button  class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".indirim">
						İndirimli Pastalar
					</button>
				</div>
			</div>

			<div class="row isotope-grid">

				<% products.forEach((item) => {  %>

				<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item <%=`${item.type}`%>">
					<!-- Block2 -->
					<div class="block2">
						<div class="block2-pic hov-img0">
							<img src="uploads/<%= item.photo %>" alt="IMG-PRODUCT">
						</div>

						<div class="block2-txt flex-w flex-t p-t-14">
							<div class="block2-txt-child1 flex-col-l ">
								<p href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
									<%= item.name %>
								</p>

								<span class="stext-105 cl3">
									<%= item.price %>TL
								</span>
							</div>


							<% if (user) {  %>
							<div class="block2-txt-child2 flex-r p-t-3">
								<form action="/cart/add/<%= item._id %>	" method="post">
									<input type="hidden" name="productId" value="<%= item._id %>">
									<button type="submit"><img src="images/icons/icon-shop-1.PNG" alt=""></button>
								</form>
							</div>
							<% } %>
						</div>
					</div>
				</div>

					<% }) %>

			</div>
		</div>


				

			<!-- Load more -->
		
		</div>
		
	</section>
	<script>
		$('.js-addwish-detail').each(function(){
		var nameProduct = $(this).parent().parent().parent().find('.js-name-detail').html();

		$(this).on('click', function(){
			swal(nameProduct, "Sepete eklendi !", "success");

			$(this).addClass('js-addedwish-detail');
			$(this).off('click');
		});
	});

	</script>
